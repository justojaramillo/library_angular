{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!.angular"]
	},
	"formatter": {
		"enabled": true,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 130
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSpacing": true,
			"bracketSameLine": false,
			"arrowParentheses": "always",
			"quoteStyle": "single",
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"html": {
		"formatter": {
			"enabled": true,
			"attributePosition": "auto",
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 130
		},
		"experimentalFullSupportEnabled": true,
		"linter": {
			"enabled": true
		},
		"parser": {
			"interpolation": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "off"
			},
			"recommended": true,
			"suspicious": {
				"noUnknownAtRules": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		},
		"domains": {}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
